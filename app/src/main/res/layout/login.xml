<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/user2"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to unlock the best of TripAdvisor"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:textSize="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By proceeding, you agree to our Terms and conditions and confirm you have read our privacy and Cookie Statement"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:textSize="8dp"
        android:textStyle="normal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Continue with email"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawableTint="@color/black"
            android:textSize="12dp"
            android:id="@+id/loginBtn"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="22dp"/>

    </LinearLayout>

</LinearLayout>